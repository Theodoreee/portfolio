ion: relative;\n    display: flex;\n    align-items: center;\n    justify-content: center;\n}\n\n.review {\n    width: 500px;\n    background-color: #3b373b;\n    border-radius: 8px;\n    padding: 1rem;\n    text-align: center;\n    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);\n}\n\n.review-content {\n    color: white;\n    transition: opacity 0.5s ease-in-out;\n}\n\n.review-name {\n    font-size: 3rem;\n    font-weight: bold;\n    color: #E0B0FF;\n}\n\n.review-comment {\n    text-transform: uppercase;\n    font-size: 2rem;\n    color: white;\n}\n\n.arrow {\n    position: absolute;\n    top: 50%;\n    transform: translateY(-50%);\n    background-color: #E0B0FF;\n    color: white;\n    font-size: 1.5rem;\n    border: none;\n    border-radius: 50%;\n    padding: 0.5rem 1rem;\n    cursor: pointer;\n    z-index: 10;\n    transition: background-color 0.3s ease, transform 0.3s ease;\n}\n\n.arrow:hover {\n    background-color: #bf95db;\n    transform: translateY(-50%) scale(1.1);\n}\n\n.arrow.left {\n    left: -2rem;\n    /* Flèche complètement à l'extérieur */\n}\n\n.arrow.right {\n    right: -2rem;\n    /* Flèche complètement à l'extérieur */\n}\n\n/* Transition CSS */\n.fade-enter-active,\n.fade-leave-active {\n    transition: opacity 0.5s ease-in-out;\n}\n\n.fade-enter,\n.fade-leave-to {\n    opacity: 0;\n}\n</style>\n"],"mappings":"AAqBA,eAAe;EACXA,IAAI,EAAE,sBAAsB;EAC5BC,IAAIA,CAAA,EAAG;IACH,OAAO;MACHC,YAAY,EAAE,CAAC;MACfC,OAAO,EAAE,CACL;QAAEH,IAAI,EAAE,YAAY;QAAEI,OAAO,EAAE;MAAoK,CAAC,EACpM;QAAEJ,IAAI,EAAE,OAAO;QAAEI,OAAO,EAAE;MAAgG,CAAC,EAC3H;QAAEJ,IAAI,EAAE,MAAM;QAAEI,OAAO,EAAE;MAAmB,CAAC,EAC7C;QAAEJ,IAAI,EAAE,OAAO;QAAEI,OAAO,EAAE;MAAmD,CAAC,EAC9E;QAAEJ,IAAI,EAAE,KAAK;QAAEI,OAAO,EAAE;MAAuC,CAAC;IAExE,CAAC;EACL,CAAC;EACDC,QAAQ,EAAE;IACNC,aAAaA,CAAA,EAAG;MACZ,OAAO,IAAI,CAACH,OAAO,CAAC,IAAI,CAACD,YAAY,CAAC;IAC1C;EACJ,CAAC;EACDK,OAAO,EAAE;IACLC,UAAUA,CAAA,EAAG;MACT,IAAI,CAACN,YAAW,GACZ,CAAC,IAAI,CAACA,YAAW,GAAI,CAAC,IAAI,IAAI,CAACC,OAAO,CAACM,MAAM;IACrD,CAAC;IACDC,UAAUA